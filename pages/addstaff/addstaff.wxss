/* pages/addstaff/addstaff.wxss */
.page-body {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
  padding-top: 1rpx;
}

.page-ul {
  margin: 20rpx 0;
  width: 100%;
  background: #fff;
}

.page-tr {
  height: 70rpx;
  width: 100vw;
  padding-left: 30rpx;
  background: #f5f5f5;
  font-size: 28rpx;
  color: #777;
  line-height: 70rpx;
}

.page-item {
  height: 120rpx;
  line-height: 120rpx;
  margin-left: 30rpx;
  display: flex;
  justify-content: space-between;
  padding-right: 30rpx;
  border-bottom: 1px solid #f5f5f5;
}

.page-item:last-child {
  border: 0;
}

.weui-input {
  text-align: right;
  height: 120rpx;
}

.btninfo {
  position: fixed;
  bottom: 20rpx;
  width: 95vw;
  margin:0 20rpx;
  z-index: 200;
}

.button-hover {
  background-color: rgb(255, 81, 0);
}

