
.page-body {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
  padding-top: 1rpx;
}

.page-ul {
  margin: 20rpx 0;
  width: 100%;
  background: #fff;
}

.page-tr {
  height: 70rpx;
  width: 100vw;
  padding-left: 30rpx;
  background: #f5f5f5;
  font-size: 28rpx;
  color: #777;
  line-height: 70rpx;
}

.page-item {
  height: 120rpx;
  line-height: 120rpx;
  margin-left: 30rpx;
  display: flex;
  justify-content: space-between;
  padding-right: 30rpx;
  border-bottom: 1px solid #f5f5f5;
}

.page-item:last-child {
  border: 0;
}

.weui-input {
  text-align: right;
  height: 120rpx;
}

.btninfo {
  position: fixed;
  bottom: 60rpx;
  width: 85vw;
  margin: 0 60rpx;
  z-index: 200;
}

.button-hover {
  background-color: rgb(255, 81, 0);
}

.shopimg{
  height: 320rpx;
  background: #fff;
  padding: 0 30rpx;
  margin-top: 30rpx;
}

.shopimgtxt{
  line-height: 80rpx;
}
.imgs{
  float: left;
  width: 180rpx;
  height: 180rpx;
  margin-right: 18rpx;
  position: relative;
  overflow: visible;
}