/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #F56C6C;
  height:300rpx;
  padding-top: 60rpx;
}

.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  margin: 20rpx;
  background: #fff;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}
.list-wrapper {
  width: 100%;
  margin-top:20rpx;
  background:#fff;
}
 
.list-item {
  width: 100%;
  height: 120rpx;
}
 
.list-item_active {
  background-color: #E0E3DA;
}
 
.item {
  flex-direction: row;
  align-items: center;
  height: 120rpx;
  margin-left: 20rpx;
  display: flex;
  padding-right:30rpx;
  border-bottom: 1px solid #f5f5f5;
}

.page-item:last-child {
   border:0;
}

.item-text {
  position: fixed;
  left:90rpx;
  font-size: 38rpx;
}
.item-array {
  width:40rpx;
  height:40rpx;
  position: fixed;
  right: 20rpx;
}
 
.item-image {
  position: fixed;
  left: 30rpx;
  width: 40rpx;
  height: 40rpx;
}