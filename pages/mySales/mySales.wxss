/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #d7004b;
  height:300rpx;
  padding-top: 60rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}
.list-wrapper {
  width: 100%;
  background:#fff;
}
.list-tit{
  height:60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  padding-left:20rpx;
  background: #f5f5f5;
  color:#666;
}

.list-item {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  padding:0 20rpx 0 20rpx;
}
 
.list-item_active {
  background-color: #E0E3DA;
}
 

.page-item:last-child {
   border:0;
}

.item-text {
 color:#999;
 margin-right:20rpx;
}

.page-header {
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  display: flex;
  justify-content: space-between;
  padding-right: 30rpx;
  border-bottom: 1px solid #f5f5f5;
  background: #fff;
}
