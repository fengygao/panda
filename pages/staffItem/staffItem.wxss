.page-body {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
  padding-top: 1rpx;
}

.staffli {
  width: 100%;
  height: 200rpx;
  line-height: 200rpx;
  display: flex;
  background: #e3c299;
  color: #fff;
}

.item-image {
  width: 140rpx;
  height: 140rpx;
  margin: 30rpx 0 0 30rpx;
  border-radius: 50%;
}

.textcon {
  margin-left: 40rpx;
  height: 200rpx;
  padding:20rpx 0;
}

.textcon-1 {
  font-size: 36rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.textcon-2 {
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100vw;
  background: #fff;
  text-align: center;
  font-size: 36rpx;
  display: flex;
  justify-content: space-around;
}

.item {
  line-height: 120rpx;
  align-items: center;
  height: 120rpx;
  width: 50%;
}

.item-text {
  margin-left: 20rpx;
  font-size: 34rpx;
}

.images {
  width: 30rpx;
  height: 30rpx;
}

.shopimg{
  height: 320rpx;
  background: #fff;
  padding: 0 30rpx;
  margin-top: 30rpx;
}

.shopimgtxt{
  line-height: 80rpx;
}
.imgs{
  float: left;
  width: 180rpx;
  height: 180rpx;
  margin-right: 18rpx;
  position: relative;
  overflow: visible;
}
.page-item{
  height:120rpx;
  line-height: 120rpx;
  margin-top: 30rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  background: #fff;

}
.btninfo {
  position: fixed;
  bottom: 0;
  width: 100vw;
  background: #fff;
  text-align: center;
  line-height: 120rpx;
  font-size: 36rpx;
}